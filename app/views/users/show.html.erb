<div class="inside">
<p id="notice"><%= notice %></p>

<button class="pure-button pure-button-primary"><%= link_to 'New Client', "/users/#{@user.id}/clients/new" %></button>

<h1>
  Welcome, coach!
</h1>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<div id="client-list">
  <div class="list-tools">
    <h1>Current Clients:</h1>
    <div class="tools">
      <input class="search" placeholder="Search" /><br>
      <button class="sort" data-sort="name">
        Sort by name
      </button>
    </div>
  </div>
  <ul class="list">
    <% @clients.each do |client| %>
      <ul class="client-entry">
        <%= render partial: 'shared/user_client_list_item', locals: {client: client} %>
      </ul>
    <% end %>
  </ul>
</div>
<%= link_to 'New Client', "/users/#{@user.id}/clients/new" %>

